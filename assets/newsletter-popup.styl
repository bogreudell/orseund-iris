#mc_embed_signup
	z-index 1000000
	position fixed
	top 50%
	right -100%
	-webkit-transform translateY(-50%)
	-ms-transform translateY(-50%)
	-o-transform translateY(-50%)
	transform translateY(-50%)
	width 90%
	max-width 320px
	background #d8bcbc
	border-radius 40px
	text-align center
	-webkit-box-shadow 0 3px 1px -2px rgba(0,0,0,0.2), 0 2px 2px 0 rgba(0,0,0,0.14), 0 1px 5px 0 rgba(0,0,0,0.12)
	box-shadow 0 3px 1px -2px rgba(0,0,0,0.2), 0 2px 2px 0 rgba(0,0,0,0.14), 0 1px 5px 0 rgba(0,0,0,0.12)
	transition .5s right ease-in-out
	
	&.enter-view
		right 0

	.mc_embed_signup_wrap
		width 100%
		height 100%
		position relative
		padding 40px
		
		button
			position absolute
			top 20px
			right 20px
			border 0
			background 0
			width 30px
			padding 0
			
			&:focus
				outline none
	
	*
		margin 0
		
	h4, p
		font-family adobe-garamond-pro, serif !important
		font-style italic
	
	h4
		font-size 18pt !important
		font-weight normal !important
		margin-bottom 40px
		
	p
		font-size 9pt !important
		margin-bottom 30px
		
	input		
		&[type="email"]
			margin-top 10px
			border-radius 0
			background none
			border-top 0
			border-left 0
			border-right 0
			border-bottom 1px solid #000
			font-family adobe-garamond-pro, serif
			font-style italic
			font-size 16pt
			
			&:focus
				outline none
			
			&::placeholder
				color #000
				text-align center
			
		&[type="submit"]
			margin-top 40px
			border 0
			border-radius 7px
			background #000
			padding 5px 30px
			color #d8bcbc
			font-family helvetica !important
			text-transform uppercase
			font-weight 700
	
	.mce_inline_error
		margin 0 !important
		padding 0 !important
		background-color transparent !important
		color #6B0505 !important
		font-weight initial !important
		z-index 1 !important