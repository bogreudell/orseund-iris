/* Newsletter Sign-Up */

.alert-success
	background-color transparent !important
	border-color transparent !important
	color #000 !important
	font-weight 700
	font-size 1.2rem
	letter-spacing 0.1rem
	text-transform uppercase !important

/* Product Listing (thumbnail) */

.indiv-product
	a
		color #fff
			
		.product-image
			padding-bottom 150%
			
			&.featured
				display block
			
			&.rollover
				display none
			
		.hp-title
			position absolute
			bottom 5px
			left 10px
			text-shadow 0 0 30px #000
			
			span
				text-align left
				color #fff
		
		&:hover
			color #fff !important
			
			.hp-title
				text-shadow 0 0 0 !important
			
			.product-image
				&.featured
					display none
				
				&.rollover
					display block
		
	&.flats-view
		.hp-title
			display none
		
		.product-image
			&.featured
				display none
			
			&.rollover
				display block
	
	&.body-view
		.product-image
			&.featured
				display block
			
			&.rollover
				display none