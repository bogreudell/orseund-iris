body
    &.template-product
        &.has-alert-banner
            .product-information
                &.fixed
                    top 60px !important

        button.btn.swym-button.swym-add-to-watchlist
            display none !important
            
            &.active
                display block !important

        #related-products
            max-width none !important /* styles override */
            text-align center
            
            li
                width 24.75vw
                border 0 !important /* styles override */ 
        
        .oi_popup-module
            &#oi_sizing-popup
                .oi_popup-image-wrap
                    width auto !important
                    height 80% !important
                    
                    .oi_relative-wrap
                        width 100% !important
                        height 100% !important
                        
                        img
                            width auto
                            height inherit
                

@media all and (max-width:1060px)
    body
        &.template-product
            #related-products
                max-width none !important /* styles override */
                text-align center
                
                li
                    width 49vw
                    margin-bottom 0 !important

/* can we minimize the "importants" after the "big" cleanup later? */                
@media all and (max-width:907px)
    body
        &.template-product
            .oi_fixed-header .logo-wrapper img
                margin-top -25px !important

            .breadcrumb
                padding-left 15px !important
                margin-bottom 0 !important
            
            .product-images
                width 100% !important
  
            #product_images 
                #product-thumbnails
                    display none

                .featured-image-div
                    width 100% !important
                    height 75vh !important
                    white-space nowrap !important
                    overflow-x scroll !important
                    overflow-y hidden !important
                    -webkit-overflow-scrolling touch !important
                    
                    img
                        height 100%
                        width auto !important
                        vertical-align top
                    
                    iframe
                        overflow hidden

                .featured-product-div
                    height 100% !important
                    margin 0 !important
                    width auto !important
                    display inline-block !important

            .product-information
                width 100% !important
                padding 15px !important
            
            #related-products
                li
                    .indiv-product
                        margin-bottom 0 !important

@media all and (max-width:768px)
    body
        &.template-product
            #related-products
                li
                    width 100% !important
            
            .oi_popup-module
                        &#oi_sizing-popup
                            button
                                top 5px !important
                                right 5px !important
                                width 15px !important
                                height 15px !important
                                
                            .oi_popup-image-wrap
                                width 90% !important
                                height auto !important
                                
                                .oi_relative-wrap                             
                                    img
                                        width inherit !important
                                        height auto !important