/* note: should this be renamed "collection?" */

body
	&.template-collection
		.collections-view-toggle
			position relative
			padding-right 10px
			text-align right
			font-size 1.15rem
			letter-spacing 0.075rem
			font-weight 100
			text-transform uppercase
			
			.breadcrumb
				display inline !important
				position absolute
				left 20px
				margin 0 !important
				padding 0 !important
			
			span
				&:last-of-type
					padding-right 10px
			
			button
				width auto
				margin 0 10px 0 0
				background 0
				border 0
				padding 0
				text-align right
				font-size 1.15rem
				letter-spacing 0.075rem
				font-weight 100
				text-transform uppercase
				border 1px solid #000
				padding 2px 6px 3px
				
				&:hover,
				&:active,
				&:focus
					background #000
					color #fff
				
				&:focus
					outline none
				
				&#editorial-view
					display none
    
		.product-grid
			margin-top 10px
			text-align center
			
			li
				float left
				width calc(100vw/3)
				margin 0 !important
				box-sizing border-box
				border-top 0
				border-right 1px solid #fff
				border-bottom 2px solid #fff
				border-left 1px solid #fff

@media all and (min-width:1851px)
	body
		&.template-collection
			.product-grid
				li
					width calc(100vw/4)

@media all and (max-width:768px)
	body
		&.template-collection
			.product-grid
				li
					width 100%
					margin-bottom 0 !important /* override style */
					border-top 0 !important
					border-right 0 !important
					border-bottom 2px solid #fff !important
					border-left 0 !important
					
					.indiv-product
						margin-bottom 0 !important /* override style */
		