/* note: should this be renamed "collection?" */

body
	&.template-collection
		.collections-view-toggle
			text-align right
			font-size 1.15rem
			letter-spacing 0.075rem
			font-weight 100
			text-transform uppercase
			
			span
				padding-right 10px
			
			button
				width auto
				margin 0 10px 0 0
				background 0
				border 0
				padding 0
				text-align right
				font-size 1.15rem
				letter-spacing 0.075rem
				font-weight 100
				text-transform uppercase
				border 1px solid #000
				padding 2px 6px 3px
				
				&:hover,
				&.active
					background #000
					color #fff
				
				&:focus
					outline none
    
		.product-grid
			margin-top 10px
			text-align center
			
			li
				width 24.75vw
				margin-bottom 0 !important

@media all and (max-width:1059px)
	body
		&.template-collection
			.product-grid
				li
					width 33vw

@media all and (max-width:768px)
	body
		&.template-collection
			.product-grid
				li
					width 100%
					margin-bottom 0 !important /* override style */
					
					.indiv-product
						margin-bottom 0 !important /* override style */
		